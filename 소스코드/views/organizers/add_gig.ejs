            <form class="mu-search-form">
             <input type="search" placeholder="Type Your Keyword(s) & Hit Enter">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End search box -->
 <!-- Page breadcrumb -->
 <section id="mu-page-breadcrumb">
   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <div class="mu-page-breadcrumb-area">
           <h2>Add Gig</h2>
         </div>
       </div>
     </div>
   </div>
 </section>
 <!-- End breadcrumb -->

 <!-- Start contact  -->
 <section id="mu-contact">
   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <div class="mu-contact-area">
          <!-- start title -->
          <div class="mu-title">
            <h2>공연 등록</h2>
          </div>
          <!-- end title -->
          <!-- start contact content -->
          <div class="mu-contact-content">           
            <div class="row">
              <div class="col-md-12">
                <div class="mu-contact-left">
                  <form class="contactform" action="/organizers/add_gig", method="post">                  
                    <p class="comment-form-gig_name">
                      <label for="gig_name">공연 이름 <span class="required">*</span></label>
                      <input type="text" required="required" size="30" value="" name="gig_name">
                    </p>
                    <p class="comment-form-gig_venue">
                      <label for="gig_venue">공연 장소 <span class="required">*</span></label>
                      <input type="text" required="required" value="" name="gig_venue">
                    </p>
                    <p class="comment-form-gig_date_time">
                      <label for="gig_date_time">공연 날짜<span class="required">*</span></label>
                      <input type="text" required="required" value="" name="gig_date_time">  
                    </p>
                    <p class="comment-form-gig_total_seatnum">
                      <label for="gig_total_seatnum">공연 좌석 수<span class="required">*</span></label>
                      <input type="text" required="required" value="" name="gig_total_seatnum">
                    </p>
                    <p class="comment-form-gig_image">
                      <label for="gig_image">공연 이미지<span class="required">*</span></label>
                      <input type="url" required="required" value="" name="gig_image"> 
                    </p>
                    <p class="comment-form-gig_type">
                      <label for="gig_type">공연 유형<span class="required">*</span></label>
                      <input type="text" required="required" value="" name="gig_type"> 
                    </p>
                    <p class="comment-form-gig_description">
                      <label for="gig_description">공연 설명<span class="required">*</span></label>
                      <textarea required="required" aria-required="true" rows="8" cols="45" name="gig_description"></textarea>
                    </p>                
                    <p class="form-submit">
                      <input type="submit" value="등록" class="mu-post-btn" name="submit">
                    </p>        
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- end contact content -->
         </div>
       </div>
     </div>
   </div>
 </section>
 <!-- End contact  -->
 
