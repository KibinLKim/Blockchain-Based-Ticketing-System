<!-- Start contact  -->
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                    <!-- start title -->
                    <div class="mu-title">
                        <h2>Participate in Bidding</h2>
                        <p>Start bidding to buy the reselling ticket!</p>
                    </div>
                    <!-- end title -->
                    <!-- start contact content -->
                    <div class="mu-contact-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mu-contact-left">
                                    <form class="contactform" method="post" action="/bidding/add_bidding">
                                        <p class="comment-form-author">
                                            <label for="author">Bidder ID <span class="required">*</span></label>
                                            <input type="text" required="required" size="30" value="<%=user_id%>" name="bidder_id">
                                        </p>
                                        <p class="comment-form-email">
                                            <label for="email">Bidding Index <span class="required">*</span></label>
                                            <input type="number" required="required" aria-required="true" value="<%=bidding_index%>" name="bidding_index">
                                        </p>
                                        <p class="comment-form-url">
                                            <label for="subject">Bidding Price(Max Price: <%=max_price%>) <span class="required">*</span></label>
                                            <input type="number" name="bidder_bidding_price" value="<%=current_price%>">
                                        </p>
                                        <button type="submit">Submit</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mu-contact-right">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m23!1m12!1m3!1d6249.345033302234!2d-80.02791918555701!3d40.45935344513505!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0x8834f411a7b748bd%3A0xaec8197db3de9a9e!2sCalifornia-Kirkbride%2C+Pittsburgh%2C+PA%2C+USA!3m2!1d40.4600435!2d-80.0213538!5e0!3m2!1sen!2sbd!4v1464270878470" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end contact content -->
                </div>
            </div>
        </div>
    </div>
</section>
