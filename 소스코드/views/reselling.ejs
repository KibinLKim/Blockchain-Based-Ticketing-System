<!-- Start gallery  -->
<section id="mu-gallery">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-gallery-area">
                    <!-- start title -->
                    <div class="mu-title">
                        <h2>Want to buy tickets?</h2>
                        <p>Check out our reselling ticket lists!</p>
                    </div>
                    <!-- end title -->
                    <!-- start gallery content -->
                    <%if (reselling_list.length==0){ %>
                        <th>현재 Reselling 하는 티켓이 없습니다!</th>
                    <%}%>
                    <% for(i=0;i<reselling_list.length; i++){ %>
                    <div class="mu-gallery-content">
                        <div class="mu-gallery-body">
                            <ul id="mixit-container" class="row">
                                <!-- start single gallery image -->
                                <li class="col-md-4 col-sm-6 col-xs-12 mix lab">
                                    <div class="mu-single-gallery">
                                        <div class="mu-single-gallery-item">
                                            <div class="mu-single-gallery-img">
                                                <a href="#"><img alt="img" src="assets/img/gallery/small/1.jpg"></a>
                                            </div>
                                            <div class="mu-single-gallery-info">
                                                <div class="mu-single-gallery-info-inner">
                                                    <h4><%=i+1%> .Gig Name : %//=reselling_ticket_list[i].gig_name%> <br></h4>
                                                    <p> Start Time: <%= reselling_list[i].starting_time%> - End Time :   <%= reselling_list[i].end_time%>"<br>
                                                        Current Bidding Price:  <%= reselling_list[i].current_price%> <br>
                                                        Ticket Info: <%= reselling_list[i].ticket_id %> <br>
                                                        Gig Venue : %//=reselling_ticket_list[i].gig_venue%> <br>
                                                        Gig Time : %//=reselling_ticket_list[i].gig_time%> <br>
                                                        Gig Date : %//=reselling_ticket_list[i].gig_date%> <br> </td>
                                                        <form action="/bidding" method="post">
                                                            <input type="hidden" name="bidding_index" value="<%= reselling_list[i].bidding_index%>">
                                                            <input type="hidden" name="bidding_id" value="<%=user_id%>">
                                                            <button type="submit" >I Want to Bid</button>
                                                        </form>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <%  }  %>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end gallery content -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End gallery  -->

